/* pages/takeOut.wxss */
.wall {
  width:100%;
  height:100%;
}
view.head {
  width: 675rpx;
  height: 60rpx;
  text-align: center;
  border-bottom: 0.2vw solid black;
  
}
form {
  width:675rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin:21rpx auto 0rpx;
  justify-content: center;
  border-radius: 14rpx;
  background-color: #c3d8f5;

}
.item {
  widows: 645rpx;
  height:80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  border-right:2rpx solid black;
  border-left: 2rpx solid black;
}
input {
  width:337rpx;
  height:60rpx;
  margin-top: 7rpx;
  margin-right: 14rpx;
  background-color: white;
  border:2rpx solid black;
}
label {
  width:150rpx;
  height: 60rpx;
  text-align: right;
  font-size: 35rpx;
  font-style: bold;
  margin-top: 14rpx;
  margin-right: 7rpx;
}
text.head {
  color:#051122;
  font-size: 35rpx;
}

button {
  margin-top: 100rpx;
  background-color: #e95c1b;
}

.icon {
  position:fixed;
  left:225rpx;
  bottom:10rpx;
}

image.icon {
  width:300rpx;
  height:100rpx;
}
.footer {
  width:90rpx;
  position: fixed;
  bottom: 21rpx;
  right: 7rpx;
  padding:7rpx;
  border-radius: 7rpx;
}
.footer image {
  width:inherit;
  height: inherit;
}
/*-----------------提示信息页面---------------------*/
view.head {
  width:675rpx;
  margin: 14rpx auto 0rpx;
  text-align: center;
  font-size: 42rpx;
}
view.tip {
  width:675rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 14rpx auto;
  padding:14rpx 14rpx 42rpx;
  background-color: #74c6df;
  border-radius: 14rpx;
}
view.tip textarea.tip {
  width:667rpx;
  height: auto;
  font-size: 35rpx;
  margin: 0rpx auto;
  padding:14rpx;
  background-color: #a5cdee;
  border:2rpx solid black;
}

view.close {
  width:90rpx;
  position: fixed;
  bottom: 21rpx;
  right: 7rpx;
  padding:7rpx;
  border-radius: 7rpx;
}
image.close{
  width: inherit;
  height: inherit;
}