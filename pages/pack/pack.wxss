/* pages/pack.wxss */
.img {
  width:100%;
  height:20vh;
}
image {
  width: inherit;
  height:inherit;
}
.outer {
  width:100vw;
  height:auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: baseline;
}
.form {
  display: flex;
  flex-direction: column;
  width:80vw;
  margin:5rpx 0rpx 10rpx;

}
label {
  width:20vw;
  height:4vh;
  font-size: 4vw;
  padding-top: 2vw;
  text-align: center;
  margin-bottom: 1vw;
}
input {
  width:55vw;
  height: 4vh;
  margin-bottom: 1vw;
  border: 1rpx solid black;
}
.item {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin: 1vw auto;
}
button {
  color:black;
}

.footer {
  width:12vw;
  position: fixed;
  bottom: 1vw;
  right: 1vw;
  padding:1vw;
  border-radius: 1vw;
}
.footer image {
  width:inherit;
  height: inherit;
}
